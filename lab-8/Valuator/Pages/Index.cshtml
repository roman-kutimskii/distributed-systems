@page
@model IndexModel
@{
    ViewData["Title"] = "Главная";
}

<h2>Оценка текста</h2>

<div>
    <form method="post" class="d-flex flex-column align-items-start gap-1">
        <div>Текст для оценки:</div>
        <textarea required name="text" rows="5" cols="50"></textarea>

        <div class="mt-3">Страна гражданства:</div>
        <select name="country" class="form-select" style="width: auto" required>
            <option value="" disabled selected>Выберите страну</option>
            <option value="Russia">Russia</option>
            <option value="France">France</option>
            <option value="Germany">Germany</option>
            <option value="UAE">UAE</option>
            <option value="India">India</option>
        </select>

        <button type="submit" class="btn btn-primary mt-3">Отправить</button>
    </form>
</div>