    <form method="post" class="d-flex flex-column align-items-start gap-1">
        <div>Текст для оценки:</div>
        <textarea required name="text" rows="5" cols="50"></textarea>

        <div class="mt-3">Страна гражданства:</div>
        <select name="region" class="form-select" style="width: auto" required>
            <option value="" disabled selected>Выберите страну</option>
            <option value="RU">Russia</option>
            <option value="EU">France</option>
            <option value="EU">Germany</option>
            <option value="ASIA">UAE</option>
            <option value="ASIA">India</option>
        </select>

        <input type="submit" class="btn mt-3"/>
    </form>
</div>